{
  "name": "prasanth-portfolio-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=client",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "dev:both": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "build": "npm run build --workspace=client",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "build:production": "npm run build:client && npm run build:server",
    "start": "npm run start --workspace=server",
    "start:production": "NODE_ENV=production npm run start --workspace=server",
    "deploy:build": "npm install && npm run build:client",
    "deploy:start": "NODE_ENV=production npm run start --workspace=server",
    "install:all": "npm install",
    "clean": "npm run clean --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "lerna": "^7.4.2"
  }
}
